@import "nib"
@import "colors"

.example-container
  position: absolute
  left: 0
  margin: 0

  .example-selection
    z-index: 10
    font-size 12px
    font-weight 800
    position: absolute
    transform: translateX(0) rotate(90deg)
    padding: 12px 20px 16px 20px
    cursor: pointer
    left: -75px
    top: 75px 
    display: inline-block
    background: #428bca
    transition: transform 0.5s ease-in-out
    width: 140px
    text-align: center

    &.active
      transform: translateX(330px) rotate(90deg)
      background-color #fb3a3a

  .examples
    background-color darken($workflow-background, 15%)
    overflow: hidden
    height: 650px
    transition: transform 0.5s ease-in-out
    margin-bottom: 20px
    position: absolute 
    left: -330px
    margin-left: 0
    width: 330px
    z-index: 10
    transform: translateX(0)
    top: 0
    text-shadow 0 1px 0 rgb(15, 15, 15)
    font-size 14px

    &.active
      transform: translateX(330px)

    > .row
      padding 0
      border-bottom: 15px solid lighten($workflow-background, 20%)

    p
      margin 0
      width: inherit
      padding: 10px
      box-sizing: border-box

    span.example
      cursor pointer
      text-align: center
      height 30px
      background-color #428bca
      text-shadow: none
      width: 110px
      box-sizing: border-box
      padding: 5px
      display: inline-block
      float: left
      
      &:hover
        background lighten($workflow-background, 30%)
      
      &.active
        background lighten($workflow-background, 20%)

    .example-box 
      overflow-y: auto
      height: 620px
      width: inherit
      margin-left: 0
      box-sizing: border-box

      .content
        min-height 226px
        display: none

        &.active
          display: block
          background lighten($workflow-background, 20%)

        .row
          margin: 0 auto
          width: 290px   
          padding-top: 15px
          text-align: center

          .ex-img-container   
            position: relative
            width: 290px
            height: 290px
            margin 20px auto

            img
              width: 290px
              height: 290px
              margin: 5px
              position: absolute
              top: 0
              left: 0

              &.ir-ex
                opacity: 0.5

          input
            width: 230px
            margin: 0 auto

          span.pull-right
            float: right
            cursor: pointer

          span.pull-left
            float: left
            cursor: pointer

          &:last-child
            border: none

          &:first-child
            padding-top: 15px

          p
            text-align: left

